{
    "name": "elmmet",
    "displayName": "Elm Emmet",
    "description": "Convert emmet html templates to compositions of elm functions",
    "version": "0.0.1",
    "publisher": "necinc",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/necinc/elmmet"
    },
    "activationEvents": [
        "onCommand:extension.sayHello",
        "onLanguage:elm"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.expandAbbreviation",
                "title": "Expand abbreviation to Elm"
            },
            {
                "command": "extension.sayHello",
                "title": "Enable elmmet"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "@emmetio/abbreviation": "^0.6.3",
        "@emmetio/extract-abbreviation": "^0.1.3"
    }
}
